{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es2016",
      "jsx": "preserve",
      "baseUrl": ".",
      "paths": {
        "@src/*": ["./src/*"],
        "@helpers/*": ["./src/helpers/*"],
        "@state/*": ["./src/state/*"],
        "@components/*": ["./src/components/*"],
        "@layouts/*": ["./src/layouts/*"],
        "@pages/*": ["./src/pages/*"],
        "@templates/*": ["./src/templates/*"],
      }
    },
    "exclude": ["node_modules", "**/node_modules/*"]
  }
